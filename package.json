{
  "name": "test-hono-rpc-better-auth",
  "scripts": {
    "client": "cd client && bun run dev",
    "server": "bun run --hot server/index.ts",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed-local-db.script.ts",
    "open-auth-docs": "open-cli http://localhost:3000/api/auth/reference",
    "build": "bun build ./server/index.ts --outdir ./dist/server --target bun && cd client && bun run build",
    "start": "bun run ./dist/server/index.js",
    "docker:build": "docker build -t hono-todo-app .",
    "docker:run": "docker run -p 3000:3000 --env-file .env -e DATABASE_URL='postgresql://user:password@host.docker.internal:5432/todos' hono-todo-app"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@neondatabase/serverless": "^1.0.1",
    "better-auth": "^1.3.4",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.12",
    "pg": "^8.16.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "open-cli": "^8.0.0"
  }
}
